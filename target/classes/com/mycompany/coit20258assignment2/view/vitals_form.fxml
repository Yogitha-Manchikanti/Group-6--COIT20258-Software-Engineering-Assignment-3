<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.VitalsFormController"
      spacing="10" alignment="CENTER">
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Button text="← Back" styleClass="btn-secondary" onAction="#onBack"/>
    </HBox>
    <Label text="Record Vital Signs" styleClass="title"/>
    <VBox spacing="8" styleClass="card" maxWidth="520">
        <HBox spacing="10"><Label text="Pulse (bpm)" prefWidth="140"/><TextField fx:id="pulseField" promptText="72" styleClass="input"/></HBox>
        <HBox spacing="10"><Label text="Temperature (°C)" prefWidth="140"/><TextField fx:id="tempField" promptText="36.7" styleClass="input"/></HBox>
        <HBox spacing="10"><Label text="Respiration (bpm)" prefWidth="140"/><TextField fx:id="respField" promptText="16" styleClass="input"/></HBox>
        <HBox spacing="10"><Label text="Blood Pressure" prefWidth="140"/><TextField fx:id="bpField" promptText="120/80" styleClass="input"/></HBox>
        <Button text="Submit" onAction="#onSubmit" styleClass="btn-accent"/>
        <Label fx:id="message"/>
    </VBox>
</VBox>
