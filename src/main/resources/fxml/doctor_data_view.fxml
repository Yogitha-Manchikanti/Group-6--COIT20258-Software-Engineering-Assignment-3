<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.DoctorDataViewController"
      spacing="16" styleClass="page-root">

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="← Back" onAction="#onBack" styleClass="btn-back"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#onRefresh" styleClass="btn-secondary"/>
        <Button text="Export CSV" onAction="#onExportCsv" styleClass="btn-primary"/>
        <Button text="Logout" onAction="#onLogout" styleClass="btn-logout"/>
    </HBox>

    <Label text="My Data" styleClass="title"/>

    <SplitPane dividerPositions="0.5">
        <items>
            <VBox spacing="8">
                <Label text="Appointments" style="-fx-font-weight:bold;"/>
                <ListView fx:id="appointmentsList" prefHeight="320"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Prescriptions (My Patients)" style="-fx-font-weight:bold;"/>
                <ListView fx:id="prescriptionsList" prefHeight="320"/>
            </VBox>
        </items>
    </SplitPane>

    <Label fx:id="message"/>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
