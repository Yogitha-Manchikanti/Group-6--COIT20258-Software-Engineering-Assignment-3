<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.SignupController"
      alignment="CENTER" spacing="18" prefWidth="1100" prefHeight="700">

    <Label text="Create an Account" style="-fx-font-size:32; -fx-font-weight:bold;"/>

    <VBox spacing="14" maxWidth="760"
          style="-fx-padding:24; -fx-background-color:white; -fx-background-radius:16; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 6);">

        <GridPane hgap="16" vgap="14">
            <columnConstraints>
                <ColumnConstraints minWidth="160" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Full Name -->
            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" promptText="e.g., Alice Patient"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Email (THIS is the missing control) -->
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" promptText="you@example.com"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Username (optional, still supported) -->
            <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" promptText="choose a username"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Passwords -->
            <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passField" promptText="********"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Confirm Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="confirmField" promptText="********"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Back to Login" onAction="#onBack" />
            <Button text="Sign Up" onAction="#onSignup" defaultButton="true"/>
        </HBox>

        <Label fx:id="message" textFill="#cc0000" wrapText="true"/>
    </VBox>

    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
</VBox>
