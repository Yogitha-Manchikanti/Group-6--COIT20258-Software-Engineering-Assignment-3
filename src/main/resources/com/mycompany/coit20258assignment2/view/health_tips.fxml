<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.HealthTipsController"
      spacing="10" alignment="CENTER">
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Button text="← Back" styleClass="btn-secondary" onAction="#onBack"/>
    </HBox>
    <Label text="Self-care Tips" styleClass="title"/>
    <VBox spacing="8" styleClass="card" maxWidth="720">
        <TextArea fx:id="tipsArea" prefRowCount="14" wrapText="true" editable="false"/>
        <Label fx:id="message"/>
    </VBox>
</VBox>
