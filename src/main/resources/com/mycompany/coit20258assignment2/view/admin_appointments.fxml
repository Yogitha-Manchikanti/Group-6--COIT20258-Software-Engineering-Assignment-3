<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.AdminAppointmentViewerController"
      spacing="15" style="-fx-background-color: #f5f5f5;">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- Header -->
    <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="📅 All Appointments" style="-fx-font-size:22; -fx-font-weight:bold; -fx-text-fill: #2c3e50;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="🔄 Refresh" onAction="#onRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="← Back" onAction="#onBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Statistics -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 5;">
        <Label fx:id="totalLabel" text="Total Appointments: 0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
    </HBox>

    <!-- Appointment Table -->
    <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS" 
               style="-fx-background-color: white; -fx-background-radius: 5;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="130"/>
            <TableColumn fx:id="timeColumn" text="Time" prefWidth="110"/>
            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
            <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
        </columns>
        <placeholder>
            <Label text="No appointments found" style="-fx-text-fill: #95a5a6; -fx-font-size: 14;"/>
        </placeholder>
    </TableView>

</VBox>
