<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.ReferralFormController"
      spacing="16" alignment="TOP_LEFT" prefWidth="1100" prefHeight="700"
      styleClass="page-root">

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="â† Back" onAction="#onBack" styleClass="btn-secondary"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#onLogout" styleClass="btn-logout"/>
    </HBox>

    <Label text="Refer Patient to Clinic / Hospital" styleClass="title"/>

    <!-- Card -->
    <VBox spacing="14" styleClass="card" maxWidth="720">
        <GridPane hgap="14" vgap="14">
            <columnConstraints>
                <ColumnConstraints minWidth="160" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Patient (names shown) -->
            <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <!-- Use ComboBox (supports promptText) -->
            <ComboBox fx:id="patientBox" promptText="Select patient"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Destination -->
            <Label text="Clinic / Hospital:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="destinationField" promptText="e.g., City Hospital"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Specialty -->
            <Label text="Specialty:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="specialtyField" promptText="e.g., Cardiology, Neurology"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Reason -->
            <Label text="Reason:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="reasonArea" prefRowCount="4" promptText="Brief reason"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label fx:id="message"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Create Referral" onAction="#onRefer" styleClass="btn-primary"/>
        </HBox>
    </VBox>

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</VBox>
