<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.LoginController"
      spacing="18" alignment="CENTER" prefWidth="1100" prefHeight="700">

    <Label text="Telehealth System â€” Login" style="-fx-font-size:28; -fx-font-weight:bold;"/>

    <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="420" style="-fx-padding:24; -fx-background-color:white; -fx-background-radius:16; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 6);">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Email / Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" promptText="e.g., patient@example.com or patient"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="pass"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <CheckBox fx:id="useServerCheckbox" text="Use Server Authentication (Port 8080)" 
                      GridPane.rowIndex="2" GridPane.columnIndex="1"
                      style="-fx-font-size: 12px; -fx-text-fill: #0066cc;"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Forgot Password?" onAction="#onForgotPassword" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Sign Up" onAction="#onSignup"/>
            <Button text="Login" onAction="#onLogin" id="loginBtn"/>
        </HBox>

        <Label fx:id="message" textFill="#cc0000"/>
    </VBox>
</VBox>
