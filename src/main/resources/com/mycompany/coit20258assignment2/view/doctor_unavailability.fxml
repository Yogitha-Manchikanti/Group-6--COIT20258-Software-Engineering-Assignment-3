<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.DoctorUnavailabilityController"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="🗓️ Manage Unavailability" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="← Back" onAction="#onBack" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;"/>
    </HBox>

    <!-- Add Unavailability Form -->
    <VBox spacing="15" 
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <Label text="Add Unavailability Period" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        
        <!-- Date Range -->
        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="ALWAYS"/>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints minWidth="200" prefWidth="250" hgrow="ALWAYS"/>
            </columnConstraints>
            
            <!-- Row 0: Dates -->
            <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       prefWidth="250"/>
            
            <Label text="End Date:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="endDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="0"
                       prefWidth="250"/>
            
            <!-- Row 1: All Day Checkbox -->
            <CheckBox fx:id="allDayCheckbox" text="All Day" GridPane.columnIndex="0" GridPane.rowIndex="1"
                     GridPane.columnSpan="2"
                     style="-fx-font-weight: bold;"/>
            
            <!-- Row 2: Times (only if not all day) -->
            <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                      promptText="HH:mm (e.g., 09:00)"/>
            
            <Label text="End Time:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="endTimeField" GridPane.columnIndex="3" GridPane.rowIndex="2"
                      promptText="HH:mm (e.g., 17:00)"/>
            
            <!-- Row 3: Reason -->
            <Label text="Reason:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="reasonComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"
                     prefWidth="250"/>
            
            <Label text="Custom Reason:" GridPane.columnIndex="2" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="customReasonField" GridPane.columnIndex="3" GridPane.rowIndex="3"
                      promptText="Enter custom reason"/>
        </GridPane>
        
        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="addButton" text="➕ Add Unavailability" onAction="#onAdd"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            <Button fx:id="deleteButton" text="🗑️ Delete Selected" onAction="#onDelete"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" style="-fx-font-size: 12px;"/>
        </HBox>
    </VBox>

    <!-- Unavailability List -->
    <VBox spacing="10" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <HBox alignment="CENTER_LEFT">
            <Label text="Your Unavailability Periods" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalLabel" text="Total: 0 period(s)"
                   style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
        </HBox>
        
        <TableView fx:id="unavailabilityTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="150"/>
                <TableColumn fx:id="colEndDate" text="End Date" prefWidth="150"/>
                <TableColumn fx:id="colTime" text="Time" prefWidth="150"/>
                <TableColumn fx:id="colReason" text="Reason" prefWidth="250"/>
            </columns>
        </TableView>
        
        <Label text="💡 Tip: Patients won't be able to book appointments during your unavailability periods."
               style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
    </VBox>

</VBox>
