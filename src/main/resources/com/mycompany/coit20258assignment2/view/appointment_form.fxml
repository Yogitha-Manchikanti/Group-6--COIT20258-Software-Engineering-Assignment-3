<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.AppointmentFormController"
      spacing="18" alignment="TOP_LEFT">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="← Back" onAction="#onBack" styleClass="btn-chip"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#onLogout"/>
    </HBox>

    <Label text="Book Appointment" styleClass="title"/>

    <!-- Card -->
    <VBox spacing="16" styleClass="card" maxWidth="900">
        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints minWidth="160" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Doctor -->
            <Label text="Select Doctor:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="doctorBox" promptText="Choose a doctor"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Date -->
            <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Time -->
            <Label text="Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="timeBox" promptText="Select time (e.g., 10:30 AM)"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="message"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Book" onAction="#onBook" styleClass="btn-primary"/>
        </HBox>
    </VBox>
</VBox>
