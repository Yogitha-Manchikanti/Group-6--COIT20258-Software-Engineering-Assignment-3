<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.PatientDashboardController"
      spacing="16">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- Header -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label fx:id="welcome" style="-fx-font-size:20; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#onLogout" styleClass="btn-logout"/>
    </HBox>

    <!-- All patient actions -->
    <TilePane hgap="16" vgap="16" prefColumns="3" styleClass="tile-pane">
        <Button text="Book Appointment"     onAction="#openBookAppointment"  prefWidth="240" prefHeight="64"/>
        <Button text="Record Vital Signs"   onAction="#openRecordVitals"     prefWidth="240" prefHeight="64"/>
        <Button text="Request Prescription" onAction="#openRequestRx"        prefWidth="240" prefHeight="64"/>
        <Button text="My Data"              onAction="#openMyData"           prefWidth="240" prefHeight="64"/>
        <Button text="Health Tips"          onAction="#openHealthTips"       prefWidth="240" prefHeight="64"/>
    </TilePane>
</VBox>
