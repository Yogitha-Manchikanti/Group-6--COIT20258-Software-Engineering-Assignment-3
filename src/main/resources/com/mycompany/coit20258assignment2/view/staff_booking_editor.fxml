<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.StaffBookingEditorController"
      spacing="16" alignment="TOP_LEFT" prefWidth="1100" prefHeight="700"
      stylesheets="@styles.css" styleClass="page-root">

    <!-- Top Bar -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="â† Back" onAction="#onBack" styleClass="btn-secondary"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#onLogout" styleClass="btn-secondary"/>
    </HBox>

    <Label text="My Appointments (Doctor)" styleClass="title"/>

    <VBox spacing="10" styleClass="card" maxWidth="980">
        <Label text="Select an appointment to reschedule or cancel." styleClass="hint"/>
        <ListView fx:id="appointmentList" prefHeight="320"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <DatePicker fx:id="datePicker" promptText="New Date"/>
            <TextField fx:id="timeField" promptText="New Time (HH:mm)"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Reschedule" onAction="#onReschedule" styleClass="btn-primary"/>
            <Button text="Cancel" onAction="#onCancel" styleClass="btn-danger"/>
        </HBox>

        <Label fx:id="message" styleClass="message"/>
    </VBox>

</VBox>
