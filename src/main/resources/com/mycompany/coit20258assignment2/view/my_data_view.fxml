<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.MyDataViewController"
      spacing="16" styleClass="page-root" prefWidth="1100" prefHeight="700">

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="backBtn" text="â† Back" onAction="#onBack" styleClass="btn-secondary"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#refresh" styleClass="btn-secondary"/>
        <Button text="Export CSV" onAction="#exportCsv" styleClass="btn-primary"/>
        <Button text="Logout" onAction="#onLogout" styleClass="btn-logout"/>
    </HBox>

    <Label fx:id="title" text="My Data" styleClass="title"/>

    <SplitPane dividerPositions="0.2, 0.4, 0.6, 0.8">
        <items>
            <VBox spacing="8">
                <Label text="Appointments" style="-fx-font-weight:bold;"/>
                <ListView fx:id="appointmentsList" prefHeight="420"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Prescriptions" style="-fx-font-weight:bold;"/>
                <ListView fx:id="prescriptionsList" prefHeight="420"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Diagnoses" style="-fx-font-weight:bold;"/>
                <ListView fx:id="diagnosesList" prefHeight="420"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Referrals" style="-fx-font-weight:bold;"/>
                <ListView fx:id="referralsList" prefHeight="420"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Vital Signs" style="-fx-font-weight:bold;"/>
                <ListView fx:id="vitalSignsList" prefHeight="420"/>
            </VBox>
        </items>
    </SplitPane>

    <Label fx:id="message" />

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</VBox>
