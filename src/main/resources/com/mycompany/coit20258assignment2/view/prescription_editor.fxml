<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.coit20258assignment2.PrescriptionEditorController"
      spacing="16" alignment="CENTER" prefWidth="980" prefHeight="640">

    <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="800">
        <Button text="← Back" onAction="#onBack" styleClass="btn-secondary"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="message" text=""/>
    </HBox>

    <Label text="Review / Approve / Refill Prescriptions" styleClass="title"/>

    <HBox spacing="12" alignment="CENTER" maxWidth="800">
        <Label text="Doctor ID:"/>
        <TextField fx:id="doctorIdField" promptText="e.g. current doctor's ID" prefWidth="260"/>
        <Button text="Load" onAction="#onLoad" styleClass="btn-primary"/>
    </HBox>

    <ListView fx:id="listView" prefWidth="800" prefHeight="420"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Approve Selected" onAction="#onApproveSelected" styleClass="btn-accent"/>
        <Button text="Refill Selected"  onAction="#onRefillSelected"  styleClass="btn-primary"/>
    </HBox>
</VBox>
